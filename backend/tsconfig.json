{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "target": "es2022",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts"]
}